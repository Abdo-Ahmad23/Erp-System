<odoo>
    <record id="property_view_tree" model="ir.ui.view">
         <field name="name">Property Tree</field>
         <field name="model">property</field>
         <field name="arch" type="xml">
           <tree multi_edit="1"  edit="1" create="1" delete="1" class="header_custom">
               <field name="name"/>
               <field name="owner_id"/>
               <field name="state"/>
               <field name="postcode"/>
               <field name="date_availability"/>
               <field name="selling_price"/>
               <field name="garden"/>
               <field name="facades"/>
               <field name="garden_area"/>
               <field name="active"/>
               <field name="bedrooms" optional="1"/>
               <field name="garage" optional="1"/>
               <field name="tag_ids" optional="1"/>
               <field name="propety_tag_code" optional="1"/>
               <field name="state"/>
           </tree>
         </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
         <field name="name">Property Form</field>
         <field name="model">property</field>
         <field name="arch" type="xml">
           <form>
               <header>
                   <button  name="action_draft" string="Set To Draft" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '==', 'draft')]}"/>
                   <button  name="action_pending" type="object" class="btn23" string="Pending"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                   <button  name="action_done" type="object" class="btn-success" string="Done"
                            attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                   <button  name="action_closed" type="object" class="btn-danger" string="Close"
                            attrs="{'invisible': [('state', '!=', 'done')]}"/>                    
                   <field name="state" widget="statusbar" statusbar_visible="draft,pending,done,closed"/>
               </header>
              <sheet>
                      <div class="oe_title">
                          <label for="name"/>
                          <h1>
                              <field name="name"/>
                          </h1>
                      </div>
                  <group>
                      <group string="General Info.">
                          <field name="owner_id"/>
                          <field name="owner_address"/>
                          <field name="owner_phone"/>
                          <field name="date_availability" required="1"/>
                          <field name="postcode"/>
                          <field name="expected_price"/>
                          <field name="selling_price"/>
                          <field name="diff"/>
                          <field name="living_area"/>
                          <field name="facades"/>
                      </group>
                      <group string="Additional Info.">
                           <field name="garage" />
                           <field name="garden"/>
                           <field name="bedrooms" />
                           <field name="garden_area"/>
                           <field name="garden_orientation"/>
                           <field name="active"/>
                           <field name="tag_ids" widget="many2many_tags"/>
                           <field name="propety_tag_code" optional="1"/>
                      </group>
                  </group>
                  <group>
                      <field name="description" required="1"/>
                  </group>
                  <!-- order lines  -->
                  <notebook>
                      <page string="Bedrooms">
                          <field name="property_line_ids" widget="section_and_note_one2many">
                             <tree editable="bottom">
                                 <field name="description"/>
                                 <field name="area"/>
                             </tree>
                          </field>
                      </page>
                  </notebook>
              </sheet>
               <div class="oe_chatter" >
                   <field name="message_follower_ids"/>
                   <field name="activity_ids"/>
                   <field name="message_ids"/>
               </div>
           </form>
         </field>
    </record>


    <record id="property_action" model="ir.actions.act_window">
         <field name="name">Property</field>
         <field name="res_model">property</field>
         <field name="view_mode">tree,form</field>
    </record>
    <record id="property_closed_server_action" model="ir.actions.server">
         <field name="name">Closed</field>
         <field name="model_id" ref="model_property"/>
         <field name="binding_model_id" ref="model_property"/>
         <field name="state">code</field>
         <field name="code">
             action = records.action_closed()
         </field>
    </record>
    <menuitem
       id = "property_menu_item"
       name = "Properties"
       parent = "properties_menu"
       action = "property_action"
    />
</odoo>