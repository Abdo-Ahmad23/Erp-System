<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_make_requisition_form" model="ir.ui.view">
        <field name="name">mrp.make.requisition.form</field>
        <field name="model">mrp.make.requisition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="mrp_requisition_lines_ids">
                        <tree editable="bottom">
                            <field name="mrp_make_requisition_id" invisible="1"/>
                            <field name="product_id"/>
                            <field name="uom_id"/>
                            <field name="product_qty"/>
                            <field name="type_of_requisition"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <act_window id="mrp_make_requisition_action"
                name="Mrp Make Requisition"
                res_model="mrp.make.requisition"
                view_mode="form"
                target="new"
    />


</odoo>
