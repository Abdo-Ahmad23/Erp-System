<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="planned_manufacturing_form" model="ir.ui.view">
        <field name="name">planned.manufacturing.form</field>
        <field name="model">planned.manufacturing</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="mrp_order_create" type="object" string="Mrp Order Create" class="oe_highlight"
                            attrs="{'invisible':[('state','!=','draft')]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_mrp_planned_production" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o">
                            <field name="mrp_production_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Planned Manufacturing Orders">
                            <field name="planned_manufacturing_orders_ids">               <!-- add  context="{'default_field' : field}" to set default value -->
                                <tree editable="bottom">
                                    <field name="planned_manufacturing_id"
                                           invisible="1"/>       <!-- add  domain="[('id','=',parent.field)]" to set default domain -->
                                    <field name="product_tmpl_id" string="Product"/>
                                    <field name="product_id" string="Product Variant" readonly="1" optional="hide"/>
                                    <field name="mrp_bom_id"/>
                                    <field name="source"/>
                                    <field name="scheduled_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="planned_manufacturing_sequence" model="ir.sequence">
        <field name="name">planned.manufacturing</field>
        <field name="code">planned.manufacturing</field>
        <field name="prefix">PM/</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <record id="planned_manufacturing_tree" model="ir.ui.view">
        <field name="name">planned.manufacturing.tree</field>
        <field name="model">planned.manufacturing</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
            </tree>
        </field>
    </record>


    <record id="planned_manufacturing_action" model="ir.actions.act_window">
        <field name="name">Planned Manufacturing</field>
        <field name="res_model">planned.manufacturing</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Planned Manufacturing
            </p>
        </field>
    </record>
    <menuitem id="planned_manufacturing_menu"
              name="Planned Manufacturing Orders"
              action="planned_manufacturing_action"
              parent="mrp.menu_mrp_root"
              sequence="100"/>
</odoo>
