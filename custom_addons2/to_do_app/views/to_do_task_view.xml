<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="to_do_task_form" model="ir.ui.view">
            <field name="name">to.do.task.form</field>
            <field name="model">to.do.task</field>
            <field name="arch" type="xml">
                <form string="To Do Task">
                    <header>
                        <button  name="action_neww" string="To Progress" type="object" class="btn22"
                                    attrs="{'invisible': [('state', '==', 'new')]}"/>
                        <button  name="action_in_progress" type="object" class="btn23" string="In Progress"
                                    attrs="{'invisible': [('state', '!=', 'new')]}"/>
                        <button  name="action_completed" type="object" class="btn24" string="Completed"
                                    attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,in_progress,completed"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="task_name"/>
                                <field name="assign_to"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="due_date"/>
                                <field name="state"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details of Task"
                                  attrs="{'invisible': [('state','=','completed')]}">
                                <group>
                                    <field name="task_name"/>
                                </group>
                                    <field name="task_name"/>
                                </page>
                            
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="to_do_task_tree" model="ir.ui.view">
            <field name="name">to.do.task.tree</field>
            <field name="model">to.do.task</field>
            <field name="arch" type="xml">
                <tree string="Tasks">
                    <field name="task_name"/>
                    <field name="assign_to"/>
                    <field name="description"/>
                    <field name="due_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

