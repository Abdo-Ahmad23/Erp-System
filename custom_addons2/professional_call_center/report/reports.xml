<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_custom" model="report.paperformat">
        <field name="name">Print Receipt</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">1000</field>
        <field name="page_width">80</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">0</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>
    <record id="call_center_report" model="ir.actions.report">
        <field name="name">Call Center Report</field>
        <field name="model">order.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">professional_call_center.order_report_template</field>
        <field name="report_file">professional_call_center.order_report_template</field>
    </record>
    <record id="call_center_order_print_receipt" model="ir.actions.report">
        <field name="name">Print Receipt</field>
        <field name="model">call.center.order</field>
        <field name="binding_model_id" ref="model_call_center_order"/>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">professional_call_center.call_center_receipt_template</field>
        <field name="report_file">professional_call_center.call_center_receipt_template</field>
        <field name="print_report_name">'Receipt - %s' % (object.name).replace('/', '-')</field>
        <field name="binding_view_types">form</field>
        <field name="paperformat_id" ref="professional_call_center.paperformat_custom"/>
    </record>
    <record id="account_move_print_receipt" model="ir.actions.report">
        <field name="name">Print Receipt</field>
        <field name="model">account.move</field>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">professional_call_center.move_receipt_template</field>
        <field name="report_file">professional_call_center.move_receipt_template</field>
        <field name="print_report_name">'Receipt - %s' % (object.name).replace('/', '-')</field>
        <field name="binding_view_types">form</field>
        <field name="paperformat_id" ref="professional_call_center.paperformat_custom"/>
    </record>
    <record id="stock_print_receipt" model="ir.actions.report">
        <field name="name">Print Receipt</field>
        <field name="model">stock.picking</field>
        <field name="binding_model_id" ref="model_stock_picking"/>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">professional_call_center.stock_receipt_template</field>
        <field name="report_file">professional_call_center.stock_receipt_template</field>
        <field name="print_report_name">'Receipt - %s' % (object.name).replace('/', '-')</field>
        <field name="binding_view_types">form</field>
        <field name="paperformat_id" ref="professional_call_center.paperformat_custom"/>
    </record>

</odoo>
