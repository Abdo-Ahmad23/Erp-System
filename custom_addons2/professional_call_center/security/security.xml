<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="call_center_category" model="ir.module.category">
        <field name="name">Call Center</field>
    </record>

    <record id="group_own_documents_only" model="res.groups">
        <field name="name">User: Own Documents Only</field>
        <field name="category_id" ref="call_center_category"/>
        <field name="implied_ids" eval="[(6,0, [ref('account.group_account_user')])]"/>
    </record>

    <record id="group_all_documents" model="res.groups">
        <field name="name">All Documents</field>
        <field name="category_id" ref="call_center_category"/>
        <field name="implied_ids" eval="[(6,0, [ref('group_own_documents_only')])]"/>
    </record>

    <record id="group_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="call_center_category"/>
        <field name="implied_ids" eval="[(6,0, [ref('group_all_documents')])]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

</odoo>
