<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="delivery_type_form" model="ir.ui.view">
        <field name="name">delivery.type.form</field>
        <field name="model">delivery.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Type Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="delivery_type_line" string="Delivery Type Line">
                            <field name="delivery_type_line_ids">
                                <tree editable="bottom">
                                    <field name="zone_id" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="district_id" context="{'default_zone_id':zone_id}"
                                           options="{'no_open': True, 'no_create': True}"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="delivery_type_tree" model="ir.ui.view">
        <field name="name">delivery.type.tree</field>
        <field name="model">delivery.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="delivery_type_search" model="ir.ui.view">
        <field name="name">delivery.type.search</field>
        <field name="model">delivery.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <group expand="0" string="Group By"/>
            </search>
        </field>
    </record>

    <record id="delivery_type_action" model="ir.actions.act_window">
        <field name="name">Delivery Type</field>
        <field name="res_model">delivery.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
    </record>

</odoo>

