<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="register_payment_wizard_form" model="ir.ui.view">
        <field name="name">register.payment.wizard.form</field>
        <field name="model">register.payment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="amount"/>
                    </group>
                    <group>
                        <field name="paid_amount"/>
                        <field name="call_center_order_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="paid_action" string="Paid" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
