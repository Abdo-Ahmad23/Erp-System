<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_account_payment_register_form" model="ir.ui.view">
        <field name="name">inherit.account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="from_delivery_move"
                       attrs="{'invisible': ['|', ('can_edit_wizard', '=', False), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}"/>
                <field name="delivery_boy"
                       attrs="{'invisible': ['|', ('can_edit_wizard', '=', False), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
