<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="delivery_boy_form" model="ir.ui.view">
        <field name="name">delivery.boy.form</field>
        <field name="model">delivery.boy</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_right">
                        <field name="image" class="oe_avatar" widget="image"/>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="national"/>
                        </group>

                        <group>
                            <field name="mobile"/>
                            <field name="transportation"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="delivery_boy_action" model="ir.actions.act_window">
        <field name="name">Delivery Boy</field>
        <field name="res_model">delivery.boy</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Delivery Boy
            </p>
        </field>
    </record>
    <menuitem id="delivery_boy_menu"
              name="Delivery Boy"
              action="delivery_boy_action"
              parent="manage_delivery.configuration_menu"
              sequence="1"/>

</odoo>
