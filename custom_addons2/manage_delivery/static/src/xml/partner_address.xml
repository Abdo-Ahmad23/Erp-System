<?xml version="1.0" encoding="utf-8"?>

<templates id="template" xml:space="preserve">

    <t t-name="ClientDetailsEdit2" t-inherit="point_of_sale.ClientDetailsEdit"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-left')]" position="inside">
            <div class="client-detail">
                <span class="label">Zone</span>
                <input class="detail client-loyalty" name="zone"
                       t-att-value="props.partner.zone || ''"
                       t-on-change="captureChange"/>
            </div>
            <div class="client-detail">
                <span class="label">Building Floor</span>
                <input class="detail client-loyalty" name="building_floor"
                       t-att-value="props.partner.building_floor || ''"
                       t-on-change="captureChange"/>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('client-details-right')]" position="inside">
            <div class="client-detail">
                <span class="label">Special Mark</span>
                <input class="detail client-loyalty" name="special_mark"
                       t-att-value="props.partner.special_mark || ''"
                       t-on-change="captureChange"/>
            </div>
            <div class="client-detail">
                <span class="label">Area Region</span>
                <input class="detail client-loyalty" name="area_region"
                       t-att-value="props.partner.area_region || ''"
                       t-on-change="captureChange"/>
            </div>

        </xpath>
    </t>
 </templates>

