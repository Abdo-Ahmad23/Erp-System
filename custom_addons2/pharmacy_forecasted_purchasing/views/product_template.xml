<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_product_template_form" model="ir.ui.view">
        <field name="name">inherit.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="return_security"/>
                    <label for="return_security"/>
                </span>
            </xpath>

            <xpath expr="//field[@name='invoice_policy']" position="after">
                <field name="unit_value"/>
                <field name="type_of_product" string="Type"/>
                <field name="origin"/>
                <field name="using_way_id"/>
                <field name="producing_company_id"/>
                <field name="discounted"/>
                <field name="max_discount"/>
                <field name="effective_material"/>
                <field name="scientific_group_id"/>
                <field name="international_code" invisible="1"/>
            </xpath>


            <xpath expr="//field[@name='categ_id']" position="before">
                <field name="price_without_vat"/>
                <field name="price_vat"/>
            </xpath>

        </field>
    </record>

    <record id="type_of_product_form" model="ir.ui.view">
        <field name="name">type.of.product.form</field>
        <field name="model">type.of.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="type_of_product_tree" model="ir.ui.view">
        <field name="name">type.of.product.tree</field>
        <field name="model">type.of.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="type_of_product_action" model="ir.actions.act_window">
        <field name="name">Type Of Product</field>
        <field name="res_model">type.of.product</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
    </record>

    <menuitem id="type_of_product_menu"
              name="type"
              action="type_of_product_action"
              parent="stock.menu_product_in_config_stock"
              sequence="100"
    />


