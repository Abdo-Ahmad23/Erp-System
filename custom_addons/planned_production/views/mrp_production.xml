<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_mrp_production_form" model="ir.ui.view">
        <field name="name">inherit.mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">

                <button name="view_action_requisition_type" type="object"
                        string="Make Requisition"
                        class="oe_highlight"/>
            </xpath>

            <xpath expr="//field[@name='move_raw_ids']/tree//field[@name='quantity_done']"
                   position="after">
                <field name="type_of_requisition"/>
            </xpath>


            <xpath expr="//page[@name='components']" position="after">
                <page string="Direct Labour Cost">
                    <field name="direct_labour_cost_ids">               <!-- add  context="{'default_field' : field}" to set default value -->
                        <tree editable="bottom">
                            <field name="mrp_production_id"
                                   invisible="1"/>       <!-- add  domain="[('id','=',parent.field)]" to set default domain -->
                            <field name="product_id"/>
                            <field name="planned_quantity"/>
                            <field name="unit_cost"/>
                            <field name="uom_id"/>
                            <field name="actual_hours"/>
                            <field name="total_cost"/>
                            <field name="total_actual_cost"/>
                        </tree>
                    </field>
                    <group name="note_group" col="6"
                           class="mt-2 mt-md-0">

                        <group class="oe_subtotal_footer oe_right"
                               colspan="2" name="sale_total">
                            <field name="total_labour_cost"
                                   force_save="1"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <div class="oe_clear"/>
                    </group>
                </page>
                <page string="Direct OverHead Cost">
                    <field name="direct_overhead_cost_ids">               <!-- add  context="{'default_field' : field}" to set default value -->
                        <tree editable="bottom">
                            <field name="mrp_production_id"
                                   invisible="1"/>       <!-- add  domain="[('id','=',parent.field)]" to set default domain -->
                            <field name="product_id"/>
                            <field name="planned_quantity"/>
                            <field name="unit_cost"/>
                            <field name="uom_id"/>
                            <field name="actual_hours"/>
                            <field name="total_cost"/>
                            <field name="total_actual_cost"/>
                        </tree>
                    </field>
                    <group name="note_group" col="6"
                           class="mt-2 mt-md-0">

                        <group class="oe_subtotal_footer oe_right"
                               colspan="2" name="sale_total">
                            <field name="total_overhead_cost"
                                   force_save="1"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <div class="oe_clear"/>
                    </group>
                </page>
                <page string="Costing">
                    <group>
                        <group>
                            <field name="total_material_cost"/>
                            <field name="total_labour_cost"/>
                            <field name="total_overhead_cost"/>
                        </group>

                        <group>
                            <field name="total_actual_labour"/>
                            <field name="actual_labour_cost"/>
                            <field name="total_actual_overhead"/>
                            <field name="actual_overhead_cost"/>
                            <!--                                <field name="product_unit_cost"/>-->
                        </group>

                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
