<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_mrp_bom_form" model="ir.ui.view">
        <field name="name">inherit.mrp.bom.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='components']" position="after">
                <page string="Direct Labour Cost">
                    <field name="direct_labour_cost_ids">               <!-- add  context="{'default_field' : field}" to set default value -->
                        <tree editable="bottom">
                            <field name="mrp_bom_id"
                                   invisible="1"/>       <!-- add  domain="[('id','=',parent.field)]" to set default domain -->
                            <field name="operation_id"/>
                            <field name="product_id"/>
                            <field name="planned_quantity"/>
                            <field name="unit_cost"/>
                            <field name="uom_id"/>
                            <field name="total_cost"/>


                        </tree>
                    </field>
                    <group name="note_group" col="6"
                           class="mt-2 mt-md-0">

                        <group class="oe_subtotal_footer oe_right"
                               colspan="2" name="sale_total">
                            <field name="total_labour_cost"
                                   force_save="1"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <div class="oe_clear"/>
                    </group>
                </page>
                <page string="Direct OverHead Cost">
                    <field name="direct_overhead_cost_ids">               <!-- add  context="{'default_field' : field}" to set default value -->
                        <tree editable="bottom">
                            <field name="mrp_bom_id"
                                   invisible="1"/>       <!-- add  domain="[('id','=',parent.field)]" to set default domain -->
                            <field name="operation_id"/>
                            <field name="product_id"/>
                            <field name="planned_quantity"/>
                            <field name="unit_cost"/>
                            <field name="uom_id"/>
                            <field name="total_cost"/>
                        </tree>
                    </field>
                    <group name="note_group" col="6"
                           class="mt-2 mt-md-0">

                        <group class="oe_subtotal_footer oe_right"
                               colspan="2" name="sale_total">
                            <field name="total_overhead_cost"
                                   force_save="1"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <div class="oe_clear"/>
                    </group>
                </page>
                <page string="Costing">
                    <group>
                        <field name="total_material_cost"/>
                        <field name="total_labour_cost"/>
                        <field name="total_overhead_cost"/>

                    </group>


                </page>

            </xpath>
        </field>
    </record>
</odoo>
