<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_production_server_action" model="ir.actions.server">
        <field name="name">Mrp Production</field>
        <field name="model_id"
               ref="mrp.model_mrp_production"/> <!-- ex: sale.order will be model_sale_order  -->
        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            action = model.pppp() <!-- ex: action = model.create_invoice()  -->
        </field>
    </record>


</odoo>
