<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_users_form" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='access_rights']/group" position="before">
                <div>
                    <label for="is_delivery_boy"/>
                    <field name="is_delivery_boy"/>
                </div>
                <field name="user_types" invisible="1"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="delivery_boy_info" string="Delivery Boy Info"
                      attrs="{'invisible':[('is_delivery_boy','=',False)]}">
                    <group>
                        <group>
                            <field name="identification_number" attrs="{'required':[('is_delivery_boy','=',True)]}"/>
                            <field name="mobile" widget="phone" string="Mobile"
                                   attrs="{'required':[('is_delivery_boy','=',True)]}"/>
                        </group>
                        <group>
                            <field name="transportation" attrs="{'required':[('is_delivery_boy','=',True)]}"/>
                            <label for="commission_fees" string="Commission Fees"/>
                            <div class="d-flex">
                                <field name="commission_fees" attrs="{'required':[('is_delivery_boy','=',True)]}"/>
                                <span class="oe_inline o_form_label mx-3">%</span>
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="res_users_action" model="ir.actions.act_window">
        <field name="name">Delivery Boy</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'default_is_delivery_boy': True}</field>
        <field name="domain">[('is_delivery_boy', '=', True), ('user_types', '=', 'portal')]</field>
        <field name="view_id" ref="base.view_users_tree"/>
        <field name="search_view_id" ref="base.view_users_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
    </record>
    <record id="action_res_users_view1" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base.view_users_tree"/>
        <field name="act_window_id" ref="res_users_action"/>
    </record>
    <record id="action_res_users_view2" model="ir.actions.act_window.view">
        <field eval="20" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="base.view_users_form"/>
        <field name="act_window_id" ref="res_users_action"/>
    </record>
</odoo>
