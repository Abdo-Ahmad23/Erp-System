<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="assign_delivery_boy_form" model="ir.ui.view">
        <field name="name">assign.delivery.boy.form</field>
        <field name="model">assign.delivery.boy</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="account_move_ids" invisible="1"/>
                        <field name="transportation"/>
                        <field name="delivery_boy_id" options="{'no_open': True, 'no_create': True}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="delivery_assigned" string="Assign" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
