<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="call_center_line_tree" model="ir.ui.view">
        <field name="name">call.center.line.tree</field>
        <field name="model">call.center.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_id" string="Call Center Order"/>
                <field name="product_id" force_save="1" widget="product_configurator"/>
                <field name="partner_id"/>
                <!-- <field name="name_des" widget="section_and_note_text"/> -->
                <!-- <field name="qty_available"/> -->
                <!-- <field name="virtual_available"/> -->
                <!-- <field name="qty_in_location"/> -->
                <field name="quantity"/>
                <field name="product_category"/>
                <field name="product_type"/>
                <field name="state"/>
                <!-- <field name="unit_price" force_save="1"/> -->
                <!-- <field name="tax_ids" options="{'no_open': True, 'no_create': True,'color_field': 'id'}"
                       widget="many2many_tags"/>
                <field name="price_subtotal"/> -->
            </tree>
        </field>
    </record>
    <record id="view_lines_form" model="ir.ui.view">
        <field name="name">call.center.line.view.form</field>
        <field name="model">call.center.line</field>
        <field name="arch" type="xml">
             <form>
                <sheet>
                         <div class="oe_title">
                            <h1>
                                 <field name="order_id"/>
                            </h1>
                         </div>
                    <group>
                        <group>
                       <!--      <field name="order_id"/>-->
                             <field name="partner_id"/>
                             <field name="warehouse_id"/>
                             <field name="delivery_date"/>
                             <field name="date_order"/>
                        </group>
                        <group>
                             <field name="product_id"/>
                             <field name="product_category"/>
                             <field name="product_type"/>
                             <field name="quantity"/>
                             <field name="name_des"/>
                             <field name="state"/>
                        </group>
                    </group>
                    <div class="oe_chatter">
                                            <field name="message_follower_ids"/>
                                            <field name="activity_ids"/>
                                            <field name="message_ids"/>
                                        </div>
                </sheet>
             </form>
        </field>
    </record>
    <record id="call_center_line_search" model="ir.ui.view">
        <field name="name">call.center.line.search</field>
        <field name="model">call.center.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
                <field name="warehouse_id" string="Branch"/>
                <field name="order_id" string="Call Center Order"/>
                <field name="name_des"/>
                <group expand="0" string="Group By">
                    <filter name="state" string="Status In Preparation" domain="[('state','=','in_preparation')]"/>
                    <!-- <filter name="product_type" string="Product Type Is Not Service " domain="[('product_type','!=','service')]"/> -->
                    <filter string="Branch" name="group_warehouse_id" context="{'group_by':'warehouse_id'}"/>
                    <filter string="Product" name="group_product_id" context="{'group_by':'product_id'}"/>
                    <filter string="Call Center Order" name="group_order_id" context="{'group_by':'order_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="call_center_line_action" model="ir.actions.act_window">
        <field name="name">Order Lines</field>
        <field name="res_model">call.center.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': False, 'edit': False}
        </field>
    </record>
</odoo>

