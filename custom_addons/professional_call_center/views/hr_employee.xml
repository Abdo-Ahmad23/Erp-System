<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="coach_id" position="after">
                <field name="is_call_center"/>
            </field>
        </field>
    </record>
    <record id="hr_employee_action" model="ir.actions.act_window">
        <field name="name">Hr Employee</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="context">{'chat_icon': True, 'default_is_call_center': True}</field>
        <field name="domain">[('is_call_center', '=', True)]</field>
        <field name="search_view_id" ref="hr.view_employee_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>

    </record>
</odoo>
