<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_pos_payment_form" model="ir.ui.view">
        <field name="name">inherit.pos.payment.form</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="after">
                <field name="batch_number"/>
                <field name="machine_number"/>
            </xpath>

        </field>
    </record>
    <record id="inherit_pos_payment_tree" model="ir.ui.view">
        <field name="name">inherit.pos.payment.tree</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_date']" position="after">
                <field name="batch_number"/>
                <field name="machine_number"/>
            </xpath>

        </field>
    </record>
</odoo>
