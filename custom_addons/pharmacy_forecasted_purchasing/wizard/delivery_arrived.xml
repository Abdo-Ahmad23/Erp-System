<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="delivery_arrived_form" model="ir.ui.view">
        <field name="name">delivery.arrived.form</field>
        <field name="model">delivery.arrived</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="delivery_arrived"/>
                    </group>

                </sheet>
                <footer>
                    <button name="confirm_delivery_arrived" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="delivery_arrived_action"
                name="Delivery Arrived"
                res_model="delivery.arrived"
                view_mode="form" target="new"/>
</odoo>
