<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--                    hr employee                      -->
    <record id="inherit_hr_employee_form" model="ir.ui.view">
        <field name="name">inherit.hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="Payroll Info" string="Payroll Info">
                    <group>
                        <group>
                            <field name="branch"/>
                        </group>
                        <group/>
                        <group>
                            <field name="bank_id"/>
                        </group>
                        <group>
                            <field name="bank_account"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <!--                        hr employee public                              -->
    <record id="inherit_hr_employee_public_form" model="ir.ui.view">
        <field name="name">inherit.hr.employee.public.form</field>
        <field name="model">hr.employee.public</field>
        <field name="inherit_id" ref="hr.hr_employee_public_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="branch" invisible="1"/>
                <field name="bank_id" invisible="1"/>
                <field name="bank_account" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
