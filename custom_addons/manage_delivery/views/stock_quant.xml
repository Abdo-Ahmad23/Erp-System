<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form_inh" model="ir.ui.view">
        <field name="name">stock.picking.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_validate']" position='after'>
                <field name="sale_order_id" invisible="1"/>

                <button name="create_invoice_to_delivery" type="object"
                        string="Create Invoice"
                        class="oe_highlight"
                        attrs="{'invisible':['|',('invoice_is_created','=',False),('picking_type_code','!=','outgoing')]}"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='product_uom']"
                   position="after">
                <field name="price_unit"/>
            </xpath>
            <xpath expr="//field[@name='origin']"
                   position="after">
                <field name="account_move_id"/>
                <field name="invoice_is_created" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="force_save">1</attribute>
            </xpath>

        </field>
    </record>

    <record id="view_invoice_payment_wizard_inh" model="ir.ui.view">
        <field name="name">sale.advance.payment.inv.inherit</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <xpath expr="//footer" position='replace'>
                <footer>
                    <button name="create_invoices" id="create_invoice_open"
                            string="Create and View Invoice" type="object"
                            context="{'open_invoices': True}"
                            class="btn-primary" data-hotkey="q"/>
                    <button name="create_invoices" id="create_invoice"
                            string="Create Invoice" type="object"
                            data-hotkey="w"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel" data-hotkey="z"/>
                </footer>
            </xpath>
        </field>
    </record>

    <record id="inherit_stock_picking_kanban" model="ir.ui.view">
        <field name="name">inherit.stock.picking.kanban</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.stock_picking_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_record_headings')]"
                   position="after">
                <button string="Invoice" name="create_invoice_to_delivery"
                        data-hotkey="v" type="object"
                        class="btn btn-primary btn-sm btn-danger"
                        attrs="{'invisible':['|',('invoice_is_created','=',False),('picking_type_code','!=','outgoing')]}">
                    <span>Invoice</span>
                </button>
                <field name="invoice_is_created" invisible="1"/>
                <field name="picking_type_code" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
