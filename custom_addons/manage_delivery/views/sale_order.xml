<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_sale_order_form" model="ir.ui.view">
        <field name="name">inherit.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="mobile"/>
                <field name="customer_code"/>
                <field name="street"/>
                <field name="zone"/>
                <field name="building_floor"/>
                <field name="special_mark"/>
                <field name="area_region"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="hr_employee_id"/>
                <field name="other_type"/>
                <field name="delivery_date_time"/>
                <field name="branch_warehouse_id"/>
            </xpath>
        </field>
    </record>
</odoo>
