<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="select_delivery_invoice_form" model="ir.ui.view">
        <field name="name">select.delivery.invoice.form</field>
        <field name="model">select.delivery.invoice</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="delivery_invoice_lines_ids">               <!-- add  context="{'default_field' : field}" to set default value -->
                        <tree editable="bottom" create="0" delete="0">
                            <field name="select_delivery_invoice_id"
                                   invisible="1"/>       <!-- add  domain="[('id','=',parent.field)]" to set default domain -->
                            <field name="account_move_id"/>
                            <field name="partner_id"/>
                            <field name="delivery_boy"/>
                            <field name="street"/>
                            <field name="zone"/>
                            <field name="mobile"/>
                            <field name="amount"/>
                            <field name="select"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <act_window id="select_delivery_invoice_action"
                name="Select Delivery Invoice"
                res_model="select.delivery.invoice"
                view_mode="form"
                target="new"

    />

</odoo>
