<?xml version ="1.0" encoding="utf-8" ?>

<odoo>
    <record id="sh_leave_type_max_days_leave_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.type.max.days.leave.form</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <field name="allocation_validation_type" position="after">
                <field name="set_max_days_leave" attrs="{'readonly':[('request_unit','=','hour')] }"/>
                <field name="no_max_days_leave"
                       attrs="{'invisible':[('set_max_days_leave','=',False)] , 'readonly':[('set_max_days_leave','=',False)]}"/>

                <field name="set_max_days_leave_month" attrs="{'readonly':[('request_unit','=','hour')] }"/>
                <field name="no_max_days_leave_month"
                       attrs="{'invisible':[('set_max_days_leave_month','=',False)] ,'readonly':[('set_max_days_leave','=',False)] }"/>
            </field>
        </field>
    </record>

    <record id="sh_hr_leave_max_days_leave_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.max.days.leave.form</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="is_changed_max_days" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
