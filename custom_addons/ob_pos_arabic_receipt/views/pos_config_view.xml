<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_config_view_receipt_design_form_inherit" model="ir.ui.view">
            <field name="name">pos.config.form</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='iface_invoicing']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_arabic_receipt" invisible="0"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_arabic_receipt"/>
                            <div class="text-muted">
                                Print custom arabic receipt
                            </div>
                            <div class="content-group mt16"
                                 attrs="{'invisible': [('enable_arabic_receipt', '=', False)]}">
                                <field options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"
                                       name="receipt_design_id"
                                       attrs="{'required': [('enable_arabic_receipt', '=', True)]}" invisible="1"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
